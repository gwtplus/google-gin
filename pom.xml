  <scm>
    <connection>scm:git:https://github.com/gwtplus/google-gin.git</connection>
    <developerConnection>scm:git:https://github.com/gwtplus/google-gin.git</developerConnection>
    <url>https://github.com/gwtplus/google-gin</url>
    <tag>HEAD</tag>
